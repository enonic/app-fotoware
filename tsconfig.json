{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"declaration": false,
		"declarationMap": false,
		"downlevelIteration": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "error",
		"inlineSourceMap": false,
		"inlineSources": false,
		"listEmittedFiles": true,
		"listFiles": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "build/tsc",
		"paths": {
			// Production (should be commented in on commit)
			"@enonic/js-utils": ["node_modules/@enonic/js-utils/src"],
			"/lib/fotoware/*": ["src/main/resources/lib/fotoware/*"],
			"/lib/xp/content": ["node_modules/@enonic-types/lib-content"],
			"/lib/xp/io": ["node_modules/@enonic-types/lib-io"],
			"/lib/xp/*": ["src/main/resources/lib/xp/*"],
			"/tasks/*": ["src/main/resources/tasks/*"]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDirs": ["src/main/resources"],
		"sourceMap": false,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ES5",
		"types": [
			"@enonic-types/global"
		]
	},
	"exclude": [
		"node_modules"
	],
	"files": [
		"./src/main/resources/services/sitesConfigs/sitesConfigs.ts"
	],
	"include": [
		"src/main/resources/**/*"
	]
}
