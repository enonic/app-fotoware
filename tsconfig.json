{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "build/tsc",
		"paths": {
			"@enonic/js-utils": ["node_modules/@enonic/js-utils/src"],
			"/lib/fotoware/*": ["src/main/resources/lib/fotoware/*"],
			"/lib/xp/*": ["src/main/resources/lib/xp/*"],
			"/tasks/*": ["src/main/resources/tasks/*"]
		},
		"rootDirs": ["src/main/resources"],
		"target": "ES5"
	},
	"files": [
      "./src/main/resources/services/sitesConfigs/sitesConfigs.ts"
  	],
	"include": [
      "src/main/resources/**/*"
    ]
}
