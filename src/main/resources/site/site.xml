<?xml version="1.0" encoding="UTF-8"?>
<site>
	<form>
		<input name="hostname" type="TextLine">
  			<label>Hostname</label>
			<help-text>https://company.fotoware.cloud</help-text>
			<occurrences minimum="1" maximum="1"/>
			<config>
				<regexp>https:\/\/[-a-zA-Z0-9@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@:%_\+.~#?&amp;//=]*)</regexp>
			</config>
		</input>

		<option-set name="docTypesOptionSet">
			<label>Doc-types and extentions to include</label>
			<expanded>false</expanded>
			<help-text></help-text>
  			<occurrences minimum="1" maximum="1"/>
			<options minimum="1" maximum="5">
				<option name="document">
					<label>Document</label>
					<default>false</default>
  					<help-text></help-text>
					<items>
						<input name="pdf" type="CheckBox">
						  <label>PDF</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
					</items>
				</option>
				<option name="generic">
					<label>Generic</label>
					<default>false</default>
  					<help-text></help-text>
					<items>
						<input name="cof" type="CheckBox">
						  <label>Cof</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
						<input name="cop" type="CheckBox">
						  <label>Cop</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
						<input name="cos" type="CheckBox">
						  <label>Cos</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
						<input name="cot" type="CheckBox">
						  <label>Cot</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
						<input name="zip" type="CheckBox">
						  <label>Zip</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
					</items>
				</option>
				<option name="graphic">
					<label>Graphic</label>
					<default>true</default>
  					<help-text></help-text>
					<items>
						<input name="ai" type="CheckBox">
						  <label>Ai</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
						<input name="svg" type="CheckBox">
						  <label>SVG</label>
						  <default>checked</default><!-- default is unchecked -->
						</input>
					</items>
				</option>
				<option name="image">
					<label>Image</label>
					<default>true</default>
  					<help-text></help-text>
					<items>
						<input name="cr2" type="CheckBox">
							<label>CR2</label>
							<default>unchecked</default><!-- default is unchecked -->
						</input>
						<input name="jpg" type="CheckBox">
						  <label>JPG</label>
						  <default>checked</default><!-- default is unchecked -->
						</input>
						<input name="png" type="CheckBox">
						  <label>PNG</label>
						  <default>checked</default><!-- default is unchecked -->
						</input>
						<input name="psd" type="CheckBox">
							<label>PSD</label>
							<default>unchecked</default><!-- default is unchecked -->
						</input>
						<input name="tif" type="CheckBox">
						  <label>TIFF</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
					</items>
				</option>
				<option name="movie">
					<label>Movie</label>
					<default>false</default>
  					<help-text></help-text>
					<items>
						<input name="mp4" type="CheckBox">
						  <label>Ai</label>
						  <default>unchecked</default><!-- default is unchecked -->
						</input>
					</items>
				</option>
			</options>
		</option-set>

		<option-set name="archiveOptionSet">
  			<label i18n="archiveOptionSet.label">Archives</label>
  			<expanded>false</expanded>
  			<occurrences minimum="1" maximum="1"/>
  			<help-text></help-text>
  			<options minimum="1" maximum="2">
    			<option name="public">
					<default>true</default>
      				<label i18n="public.label">Public</label>
  					<help-text i18n="public.help-text"></help-text>
					<items>
						<input name="folder" type="ContentSelector">
							<label>Folder</label>
							<occurrences minimum="1" maximum="1"/>
							<config>
								<allowContentType>archive</allowContentType>
								<!--allowContentType>base:folder</allowContentType-->
								<allowPath>${site}/*</allowPath>
								<treeMode>false</treeMode>
								<showStatus>false</showStatus>
								<hideToggleIcon>false</hideToggleIcon>
							</config>
						</input>
					</items>
    			</option>
    			<option name="private">
      				<label i18n="private.label">Private</label>
					<help-text i18n="private.help-text"></help-text>
      				<default>false</default>
      				<items>
						<input name="clientId" type="TextLine">
				  			<label>Client ID</label>
							<help-text></help-text>
							<occurrences minimum="1" maximum="1"/>
						</input>
						<input name="clientSecret" type="TextLine">
				  			<label>Client Secret</label>
							<help-text></help-text>
							<occurrences minimum="1" maximum="1"/>
						</input>
						<input name="folder" type="ContentSelector">
							<label>Folder</label>
							<occurrences minimum="1" maximum="1"/>
							<config>
								<allowContentType>archive</allowContentType>
								<!--allowContentType>base:folder</allowContentType-->
								<allowPath>${site}/*</allowPath>
								<treeMode>false</treeMode>
								<showStatus>false</showStatus>
								<hideToggleIcon>false</hideToggleIcon>
							</config>
						</input>
      				</items>
    			</option>
			</options>
		</option-set>
	</form>
</site>
