<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<task>
	<description>Download and persist rendition</description>
	<form>
		<!-- From config -->
		<input name="hostname" type="TextLine">
			<label>Hostname</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<input name="path" type="TextLine">
			<label>Path</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<!-- From API -->
		<input name="accessToken" type="TextLine">
			<label>Access token</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<input name="fields" type="TextLine">
			<label>Fields</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<input name="renditionServiceShortAbsolutePath" type="TextLine">
			<label>Rendition-service short absolute path</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<!-- From asset -->
		<input name="assetHref" type="TextLine">
			<label>Asset href</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<input name="filename" type="TextLine">
			<label>Filename</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<input name="mediaName" type="TextLine">
			<label>Media name</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<input name="metadata" type="TextLine">
			<label>Metadata</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
		<input name="renditionUrl" type="TextLine">
			<label>Rendition url</label>
			<occurrences minimum="1" maximum="1"/>
		</input>
	</form>
</task>
